{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "types": [
            "node",
            "jest"
        ],
        
        "outDir": "./build/",
        "removeComments": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "src/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ]
}
